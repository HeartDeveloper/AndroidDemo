<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.zhang.animation_demo.MainActivity">

    <Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/alpha"
    android:id="@+id/alpha_btn"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/scale"
        android:id="@+id/scale_btn"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/alpha_img"
        android:layout_marginBottom="40dp"
        android:background="@mipmap/second"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/translate"
        android:id="@+id/translate_btn"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/scale_btn"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rotate"
        android:id="@+id/rotate_btn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:layout_alignRight="@+id/alpha_btn"
        android:layout_alignEnd="@+id/alpha_btn"
        android:layout_alignBottom="@+id/bt1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="透明加旋转(listenner)"
        android:id="@+id/bt1"
        android:layout_below="@+id/scale_btn"
        android:layout_alignLeft="@+id/scale_btn"
        android:layout_alignStart="@+id/scale_btn"
        android:layout_toLeftOf="@+id/translate_btn"
        android:layout_toStartOf="@+id/translate_btn" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="连续动画（动画集）"
        android:id="@+id/btn2"
        android:layout_alignTop="@+id/bt1"
        android:layout_toEndOf="@+id/bt1"
        android:layout_toRightOf="@+id/bt1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="界面跳转"
        android:id="@+id/activity_btn"
        android:layout_below="@+id/bt1"
        android:layout_toLeftOf="@+id/bt1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="闪烁"
        android:id="@+id/bt3"
        android:layout_below="@+id/rotate_btn"
        android:layout_alignLeft="@+id/bt1"
        android:layout_alignStart="@+id/bt1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="布局动画"
        android:id="@+id/btn4"
        android:layout_alignTop="@+id/bt3"
        android:layout_toRightOf="@+id/bt1"
        android:layout_toEndOf="@+id/bt1" />
</RelativeLayout>
