<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.zhang.animation_demo.MainActivity">

    <LinearLayout
        android:id="@+id/lin1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="top">
        <Button
            android:layout_width="0dp"
            android:layout_weight="1.0"
            android:layout_height="wrap_content"
            android:text="抖动（Tada）"
            android:id="@+id/btn5"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_gravity="bottom" />

        <Button
            android:layout_width="0dp"
            android:layout_weight="1.0"
            android:layout_height="wrap_content"
            android:text="闪动（Flash）"
            android:id="@+id/btn6"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/btn5"
            android:layout_toEndOf="@+id/btn5" />
        <Button
            android:layout_width="0dp"
            android:layout_weight="1.0"
            android:layout_height="wrap_content"
            android:text="跳动（Pulse）"
            android:id="@+id/btn7"
            android:layout_alignTop="@+id/btn5"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/lin2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_below="@+id/lin1">
        <Button
            android:layout_width="0dp"
            android:layout_weight="1.0"
            android:layout_height="wrap_content"
            android:text="横拉（RubberBand）"
            android:id="@+id/btn8" />

        <Button
            android:layout_width="0dp"
            android:layout_weight="1.0"
            android:layout_height="wrap_content"
            android:text="(Swing)反Tada"
            android:id="@+id/btn10"/>
        <Button
            android:layout_width="0dp"
            android:layout_weight="1.0"
            android:layout_height="wrap_content"
            android:text="左右（Shake）"
            android:id="@+id/btn9"
            android:layout_gravity="bottom" />
    </LinearLayout>

    <LinearLayout
    android:id="@+id/lin3"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal"
    android:layout_below="@+id/lin2">
    <Button
        android:layout_width="0dp"
        android:layout_weight="1.0"
        android:layout_height="wrap_content"
        android:text="晃动（Wobble）"
        android:id="@+id/btn11" />

    <Button
        android:layout_width="0dp"
        android:layout_weight="1.0"
        android:layout_height="wrap_content"
        android:text="（Bounce）"
        android:id="@+id/btn12"
        android:layout_gravity="bottom" />
    <Button
        android:layout_width="0dp"
        android:layout_weight="1.0"
        android:layout_height="wrap_content"
        android:text="(StandUp)"
        android:id="@+id/btn13"
        android:layout_gravity="bottom" />
</LinearLayout>

    <LinearLayout
        android:id="@+id/lin4"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_below="@+id/lin3">
        <Button
            android:layout_width="0dp"
            android:layout_weight="1.0"
            android:layout_height="wrap_content"
            android:text="挥手（Wave）"
            android:id="@+id/btn14" />

        <Button
            android:layout_width="0dp"
            android:layout_weight="1.0"
            android:layout_height="wrap_content"
            android:text="（Hinge）"
            android:id="@+id/btn15"
            android:layout_gravity="bottom" />
        <Button
            android:layout_width="0dp"
            android:layout_weight="1.0"
            android:layout_height="wrap_content"
            android:text="转入(RollIn)"
            android:id="@+id/btn16"
            android:layout_gravity="bottom" />
    </LinearLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/advanced_img"
        android:layout_marginBottom="40dp"
        android:background="@mipmap/second"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />




</RelativeLayout>
